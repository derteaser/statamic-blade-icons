{
    "name": "derteaser/statamic-blade-icons",
    "type": "statamic-addon",
    "description": "An addon that adds a field type and a tag to use Blade Icons in your Statamic projects.",
    "require": {
        "blade-ui-kit/blade-icons": "1.5.2",
        "codeat3/blade-simple-icons": "1.91.0",
        "mallardduck/blade-lucide-icons": "1.11.0"
    },
    "require-dev": {
        "php": "^8.1",
        "statamic/cms": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Derteaser\\StatamicBladeIcons\\": "src"
        }
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    },
    "extra": {
        "statamic": {
            "name": "Statamic Blade Icons",
            "description": "Statamic Blade Icons addon"
        },
        "laravel": {
            "providers": [
                "Derteaser\\StatamicBladeIcons\\ServiceProvider"
            ]
        }
    }
}
